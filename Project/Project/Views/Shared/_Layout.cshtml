<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .navbar-fixed-bottom {
            bottom: 100px;
            padding-left: 100px;
        }

        .name {
            color: yellow;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-fixed-top" style="background-color:cyan">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Lucky Draw System", "Index", "User", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">                    
                    <li>@Html.ActionLink("Home", "Index", "User")</li>
                    <li>@Html.ActionLink("Winners", "Winners", "User")</li>
                    <li>@Html.ActionLink("Details", "Details", "User")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="name"><a>Hello @Session["Email"]</a></li>
                    <li>@Html.ActionLink("Login", "Index", "Login")</li>
                    <li>@Html.ActionLink("Logoff", "Logoff", "Login")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        <footer class="navbar  navbar-fixed-bottom">
            <hr />
            <p>&copy; @DateTime.Now.Year - From University Of Computer Studies(Mandalay)</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryvalajax")
    @RenderSection("scripts", required: false)
</body>
</html>
